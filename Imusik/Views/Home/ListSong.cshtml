
@{
    ViewBag.Title = "ListSong";
}

<div class="card-box">
    <h4 class="m-t-0 header-title">List Songs</h4>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Cover</th>
                <th>Name</th>
                <th>Viewd</th>
                <th>Audio</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach (var item in Model)
                {
            <tr>
                <td>@(item.idSong)</td>
                <td><img src="@(item.imageSong)" class="img img-responsive" width="20%" alt="Alternate Text" /></td>
                <td>@(item.nameSong)</td>
                <td>@(item.luotNghe)</td>
                <td>
                    <audio controls>
                        <source src="@(item.urlSong)" type="audio/mp3">
                    </audio>
                </td>
            </tr>
                 }

        </tbody>
    </table>
</div>
